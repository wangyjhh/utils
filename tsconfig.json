{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "moduleDetection": "force",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": ["node"],
        "strict": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
